<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="450.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="application.ChartController">
   <children>
      <BarChart fx:id="barChart">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <AreaChart fx:id="areaChart" layoutX="500.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </AreaChart>
      <Button layoutX="203.0" layoutY="405.0" mnemonicParsing="false" onAction="#processBarLoad" text="Load Bar Chart" />
      <Label fx:id="lblBarValue" layoutX="39.0" layoutY="409.0" text="BarValue" />
      <Button layoutX="729.0" layoutY="405.0" mnemonicParsing="false" onAction="#processAreaLoad" text="Load Area Chart" />
      <Label fx:id="lblAreaValue" layoutX="565.0" layoutY="409.0" text="AreaValue" />
   </children>
</AnchorPane>
